#!/bin/sh

branchName=$(git rev-parse --abbrev-ref HEAD)
branchRegex="^(feat|fix|hotfix)-[0-9]+-[a-z0-9\-]+$"
commitMessage=$(git log -1 --pretty=%B | head -n1)

if [ "$ALLOW_BRANCH_OVERRIDE" != "true" ]; then
  # Validate branch name
  if ! echo "$branchName" | grep -Eq "$branchRegex"; then
    echo "âŒ ERROR: Invalid branch name \"$branchName\"" >&2
    echo "âœ… Expected: feat-1234-desc, fix-5678-bug, hotfix-9999-urgent" >&2
    echo "ðŸ”“ To override: ALLOW_BRANCH_OVERRIDE=true git commit" >&2
    exit 1
  fi

  # Validate commit message
  if [ -z "$commitMessage" ]; then
    echo "âŒ ERROR: Commit message is empty." >&2
    exit 1
  fi

  if [ ${#commitMessage} -lt 10 ]; then
    echo "âŒ ERROR: Commit message too short. Must be at least 10 characters." >&2
    exit 1
  fi
fi

echo "âœ… Pre-commit checks passed!" >&2
